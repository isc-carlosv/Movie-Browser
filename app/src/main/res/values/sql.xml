<resources>    
    <!-- DB General strings -->
	<string name="sql_db_name">movieBrowser</string>
    <string name="sql_db_directory">/data/data/com.sample.android.moviebrowser/databases/movieBrowser.db</string>
	
	
    <!-- SQL CREATE strings -->
    <string name="sql_createtable_movie">CREATE TABLE IF NOT EXISTS movie (_id INT PRIMARY KEY, idMovie INT UNIQUE, title TEXT, artist TEXT, price FLOAT, coverURL TEXT, cover TEXT);</string>
    <string name="sql_droptable_movie">DROP TABLE IF EXISTS movie;</string>
    
	<!-- SQL Table key strings -->
    <string name="sql_table_movie">movie</string>
    
    <!-- SQL Column keys strings -->
    <string name="sql_column_movie_id">_id</string>
    <string name="sql_column_movie_idmovie">idMovie</string>
    <string name="sql_column_movie_title">title</string>
    <string name="sql_column_movie_artist">artist</string>
    <string name="sql_column_movie_price">price</string>
    <string name="sql_column_movie_coverURL">coverURL</string>
    <string name="sql_column_movie_cover">cover</string>
    
    
    <!-- SQL SELECT strings -->
	<string name="sql_select_all_movies">
	    SELECT _id, idMovie, title, artist, price, coverURL, cover
	    FROM movie;
    </string>
    
    <!-- SQL UPDATE strings -->
    <string name="sql_update_movie_cover_whereclause">idMovie = ?</string>
    
    
    
